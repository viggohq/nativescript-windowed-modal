<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:modal="@viggo/nativescript-windowed-modal" showingModally="showingModally">
    <modal:ModalStack class="modal-container">
        <StackLayout class="modal">
            <Label text="Hi, I'm your modal" class="m-10 m-x-auto" textWrap="true"/>
            <Button text="Close modal" class="m-10 btn btn-primary" tap="buttonTap"/>
        </StackLayout>
    </modal:ModalStack>
</Page>